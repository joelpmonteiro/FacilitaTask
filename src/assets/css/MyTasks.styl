
blue=#2693FF
white=#FFFFFF
gray=#cccccc
lightblue=#F4FBFF
backblue=#E9F4FB
Urgent=#FF2E79
Important=#FFC42E

/* Texts Colors */
TxtDark=#283848
TxtDarkOff=#77899E
TxtBlue=#2693FF

/* Input */
DisabledBlue=#AECBDE
Checked=#0ED984


.ToolsOn
  display:block !important

#MyTasks
  position: relative
  box-sizing: border-box
  background: backblue
  width: 700px
  height: auto
  overflow: hidden
  .Title
    display: block
    position: relative
    width: 100%
    height: auto
    font-size: 1.7em
    margin-bottom: 0.3em
    margin-left: 0
    margin-right: 0
    font-weight: bold
    color: TxtDark
  .Desc
    display: block
    position: relative
    width: 100%
    height: auto
    font-size: 1.2em
    margin-left: 0
    margin-right: 0
    color: TxtDarkOff
    span.Link
      color: TxtBlue

  .Search
    position: relative
    box-sizing: border-box
    margin-top: 2em
    max-width: 100%
    height: auto
    .SubmitSearch
      position: absolute
      top: 2.5px
      right: 0
      width: 50px
      height: 50px
      font-size: 1.3em
      padding: 0
      color: DisabledBlue
      background: transparent
      border: none
      cursor: pointer
      transition: 1s
      &:hover
        color: blue
        transition: .5s
    input
      position: relative
      width: 669px
      height: 50px
      font-size: 1em
      font-weight: bold
      color: DisabledBlue
      background: transparent
      border: 2px solid DisabledBlue
      border-radius: 7px
      padding: 5px 5px 5px 20px
      &:focus
        color: blue
        border: 2px solid blue
      &::placeholder { /* Chrome, Firefox, Opera, Safari 10.1+ */
        color: DisabledBlue
        opacity: 1 /* Firefox */
      }

      &:-ms-input-placeholder { /* Internet Explorer 10-11 */
        color: DisabledBlue
      }

      &::-ms-input-placeholder { /* Microsoft Edge */
        color: DisabledBlue
      }
  .GridList
    position: relative
    box-sizing: border-box
    margin-top: 2em
    max-width: 100%
    height: 370px
    overflow-x: hidden;
    .ItemList
      display: flex
      position: relative
      box-sizing: border-box
      width: 699px
      height: 64px
      background: white
      border: 1px solid #E2EEF5
      border-radius: 7px
      box-shadow: 0 1px 5px rgba(0 0 0 0.1)
      margin-bottom: 5px
      &.ItemChecked
        opacity: 0.5
      .ItemCheck
        position: relative
        width: 58px
        height: 100%
        text-align: right
        line-height: 64px
        [type="checkbox"]
          margin-top: calc(50% - 15px)
          margin-right: 7px
          width: 33px
          height: 33px
        &[type="checkbox"]:checked
          background: Checked
          color: white
      .ItemName
        position: relative
        width: 480px
        height: 100%
        font-size: 1.1em
        text-align: left
        padding-left: 10px
        color: TxtDarkOff
        line-height: 64px
        &.ItemNameChecked
          text-decoration: line-through
      .ItemTag
        position: relative
        width: 120px
        height: 100%
        text-align: center
        font-size: 1.1em
        color: TxtDarkOff
        line-height: 64px
        span
          position: relative
          width: 120px
          height: 15px
          font-size: .8em
          color: white
          border-radius: 15px
          padding: 2px 10px 2px 10px
          &.Urgente
            background: Urgent
          &.Importante
            background: Important
      .ItemTools
        position: relative
        width: 10px
        height: 100%
        text-align: center
        font-size: .8em
        color: TxtDarkOff
        line-height: 64px
        cursor: pointer
      .Tools
        display: none
        position: absolute
        top: 15px
        right: 15px
        width: 110px
        height: 74px
        background: white
        border-radius: 5px
        box-shadow: 0 0 5px rgba(0 0 0 0.3)
        z-index: 4
        .CloseTools
          position: absolute
          top: 9px
          right: 4px
          width: 10px
          height: 30px
          text-align: center
          font-size: .8em
          color: blue
        ul
          display: flex
          flex-wrap: wrap
          justify-content: center
          justify-items: center
          align-content: center
          align-items: center
          width: 110px
          height: 74px
          line-height: 74px
          li.ListTools
            width: 110px
            height: 20px
            color: #748CA5
            line-height: 20px
            text-align: left
            padding-left: 20px
            transition: 2s
            &:hover
              color: #5D7893
              cursor: pointer
              transition: .5s
              +svg:hover
                color: #5ECDA5
            & svg
              padding-bottom: 2px
              font-size: .6em
              margin-right: 5px
              color: #D6E6EF
            & svg:hover
                color: #5ECDA5
